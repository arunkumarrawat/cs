<?xml version="1.0" encoding="utf-8" ?>
<configuration>

    <configSections>
      <!-- Add your new Configuration Section here -->
      <section name="sageCRM"
               type="DBCLI.sageConfig.SageCRMConfig, DBCLI"/>
    </configSections>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5.2" />
    </startup>

    <appSettings>
      <add key="countoffiles" value="7" />
      <add key="logfilelocation" value="abc.txt" />
    </appSettings>

    <connectionStrings>
      <add name="DefaultConnectionString" connectionString="Persist Security Info=False;Integrated Security=true;Initial Catalog=DatabaseName;server=ServerName;User ID=myUsername;Password=myPassword;Pooling=false;MultipleActiveResultSets=True"/>
    </connectionStrings>

    <sageCRM>
      <instances>
        <add name="AdventureHouseAppliances"
             server="192.168.23.45"
             installationName="MainCRM"/>
        <add name="AdventureTechnology"
             server="192.168.76.2"/>
      </instances>
    </sageCRM>
</configuration>